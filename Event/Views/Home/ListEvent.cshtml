@{
    ViewData["Title"] = "New Event";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<body onload="footer()">
  <div class="container mt-6">
    <form method="post" runat="server" action="@Url.Action("Create", "Home")" method="post">
  

    <label for="title">Title</label>
    <input type="text" id="title" name="title">
    <span id="title-error" style="color: red; display: none; height: 0px;">Title must be 20 characters or less.</span>
    <br>

    <label for="description">Description</label>
    <input type="text" id="description" name="description"><br>

    <label for="category">Category</label>
    <select id="category" name="category">
      <option value="Festival">Festival</option>
      <option value="Tournament">Tournament</option>
      <option value="Party">Party</option>
      <option value="Conference">Conference</option>
      <option value="Expo">Expo</option>
    </select>


    <label for="location">Location</label>
    <input type="text" id="location" name="location"><br>

    <label for="dateEvent">Date of Event</label>
    <input type="datetime-local" id="dateEvent" name="dateEvent"><br>

    <input type="submit" value="Submit">
  </form>
  </div>  
</body>
</html>