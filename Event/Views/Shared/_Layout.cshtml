<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Event</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Event.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar">
            <ul class="d-flex">
                <li class="mr-auto p-2"><a  asp-controller="Home" asp-action="ListEvent">New Event</a></li>
                <li class="p-2"><a  asp-controller="Home" asp-action="SignUp">Sign up</a></li>
                <li class="p-2"><a  asp-controller="Home" asp-action="LogIn">Log in</a></li>
                <li class="p-2"><a href=""></a>Page 4</li>
            </ul>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Event - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
